{
  "name": "SR3_wavelet_KLHF_CIFARx4_8to32",
  "use_tb_logger": true,
  "model": "sr3",
  "scale": 4,
  "gpu_ids": [0],

  "datasets": {
    "train": {
      "name": "CIFAR10_train",
      "mode": "LRHR",
      "dataroot_HR": "/content/data/CIFARx4/HR/train",
      "dataroot_LR": "/content/data/CIFARx4/LR/train",
      "subset_file": null,
      "use_shuffle": true,
      "n_workers": 2,
      "batch_size": 64,
      "HR_size": 32,
      "use_flip": true,
      "use_rot": true
    },
    "val": {
      "name": "CIFAR10_val",
      "mode": "LRHR",
      "dataroot_HR": "/content/data/CIFARx4/HR/val",
      "dataroot_LR": "/content/data/CIFARx4/LR/val"
    }
  },

  "path": {
    "root": "./",
    "pretrain_model_G": null
  },

  "network_G": {
    "which_model_G": "SR3UNet",
    "in_nc": 3,
    "out_nc": 3,
    "nf": 64,
    "num_res_blocks": 2
  },

  "network_D": null,

  "train": {
    "diffusion_steps": 1000,
    "beta_start": 0.0001,
    "beta_end": 0.02,

    "lr_G": 1e-4,
    "weight_decay_G": 0,
    "beta1_G": 0.9,

    "lr_scheme": "MultiStepLR",
    "lr_steps": [5000, 10000, 20000, 30000],
    "lr_gamma": 0.5,

    "wavelet_filter": "sym7",
    "wavelet_level": 1,

    "pixel_criterion": "l2",
    "pixel_weight": 0.10,        // LL anchor
    "pixel_weight_lh": 0.05,
    "pixel_weight_hl": 0.05,
    "pixel_weight_hh": 0.10,

    "eps_weight": 1.0,           // ε-MSE backbone
    "t_weight_eps": "sigma_inv_sq",

    "wavelet_loss": "mmd",       // "mmd" | "softkl" | "moment"
    "gamma_a": 2.0,              // γ(t)=sigmoid(a-b*t/T)
    "gamma_b": 4.0,

    "use_class_prior": false,    // no class labels here
    "num_classes": 2,
    "hist_bins": 128,
    "hist_min": -0.5,
    "hist_max": 0.5,
    "hist_tau": 0.10,
    "prior_momentum": 0.99,

    "manual_seed": 0,
    "niter": 20000,
    "val_freq": 2000.0
  },

  "logger": {
    "print_freq": 200,
    "save_checkpoint_freq": 5000.0
  }
}
