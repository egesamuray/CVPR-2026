{
  "name": "SR3_wavelet_KLPRIOR_FFHQx8_16to128",
  "use_tb_logger": false,
  "model": "sr3",
  "scale": 8,
  "gpu_ids": [0],

  "datasets": {
    "train": {
      "name": "FFHQ_train_face",
      "mode": "LRHR",
      "dataroot_HR": "/content/faces_x8/HR/face/train",
      "dataroot_LR": "/content/faces_x8/LR/face/train",
      "subset_file": null,
      "use_shuffle": true,
      "n_workers": 4,
      "batch_size": 16,
      "HR_size": 128,
      "use_flip": true,
      "use_rot": false,
      "phase": "train",
      "scale": 8,
      "data_type": "img"
    },
    "val": {
      "name": "FFHQ_val_face",
      "mode": "LRHR",
      "dataroot_HR": "/content/faces_x8/HR/face/val",
      "dataroot_LR": "/content/faces_x8/LR/face/val",
      "phase": "val",
      "scale": 8,
      "data_type": "img"
    }
  },

  "path": {
    "root": "./",
    "pretrain_model_G": null
  },

  "network_G": {
    "which_model_G": "SR3UNet",
    "in_nc": 3,
    "out_nc": 3,
    "nf": 64,
    "num_res_blocks": 2,
    "num_classes": 1
  },

  "network_D": null,

  "train": {
    "diffusion_steps": 1000,
    "beta_schedule": "cosine",

    "lr_G": 1e-4,
    "weight_decay_G": 0,
    "beta1_G": 0.9,

    "lr_scheme": "MultiStepLR",
    "lr_steps": [50000],
    "lr_gamma": 0.5,

    "wavelet_filter": "sym7",
    "wavelet_level": 2,

    "pixel_criterion": "l2",
    "pixel_weight": 0.10,
    "pixel_weight_lh": 0.05,
    "pixel_weight_hl": 0.05,
    "pixel_weight_hh": 0.10,

    "eps_weight": 1.0,
    "t_weight_eps": "sigma_inv_sq",

    "wavelet_loss": "softkl",
    "gamma_a": 2.0,
    "gamma_b": 4.0,

    "use_class_prior": true,
    "num_classes": 1,
    "hist_bins": 128,
    "hist_min": -0.5,
    "hist_max": 0.5,
    "hist_tau": 0.10,
    "prior_momentum": 0.99,

    "use_ema": true,
    "ema_decay": 0.999,

    "lr_consistency_weight": 0.02,

    "mmd_max_points": 4096,
    "mmd_dtype": "float16",
    "mmd_sigmas": [0.5, 1.0, 2.0],

    "manual_seed": 0,
    "niter": 60000,
    "val_freq": 5000.0
  },

  "logger": {
    "print_freq": 200,
    "save_checkpoint_freq": 10000.0
  }
}
